{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "@babel/eslint-parser",
  "rules": {
    "curly": "error",
    "comma-dangle": 0,
    "comma-spacing": "error",
    "dot-location": ["error", "property"],
    "eol-last": "error",
    "eqeqeq": ["error", "allow-null"],
    "key-spacing": ["error", { "beforeColon": false }],
    "no-dupe-keys": "error",
    "no-redeclare": "error",
    "no-trailing-spaces": "error",
    "no-undef": "error",
    "no-unused-expressions": "error",
    "no-unused-vars": "warn",
    "object-curly-spacing": ["error", "always"],
    "prefer-template": "warn",
    "prettier/prettier": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    "space-before-function-paren": [
      "warn",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module",
    "es6": true,
    "ecmaVersion": 6
  },
  "extends": "prettier",
  "plugins": ["prettier"]
}
